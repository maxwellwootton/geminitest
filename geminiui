<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gemini API Query</title>
    <script>
        function queryGemini() {
            var apiKey = document.getElementById("api_key").value;
            var apiSecret = document.getElementById("api_secret").value;
            var symbol = document.getElementById("symbol").value;
            var endpoint = "https://api.gemini.com/v1/pubticker/" + symbol;

            var xhr = new XMLHttpRequest();
            xhr.open("GET", endpoint, true);
            xhr.setRequestHeader("X-GEMINI-APIKEY", apiKey);
            xhr.setRequestHeader("X-GEMINI-PAYLOAD", "");
            xhr.setRequestHeader("X-GEMINI-SIGNATURE", "");

            xhr.onreadystatechange = function () {
                if (xhr.readyState === 4 && xhr.status === 200) {
                    var response = JSON.parse(xhr.responseText);
                    document.getElementById("result").innerHTML = JSON.stringify(response, null, 4);
                } else if (xhr.readyState === 4) {
                    document.getElementById("result").innerHTML = "Error: Unable to fetch data from Gemini API.";
                }
            };

            xhr.send();
        }
    </script>
</head>
<body>
    <h1>Gemini API Query</h1>
    <form>
        <label for="api_key">API Key:</label><br>
        <input type="text" id="api_key" name="api_key"><br>
        <label for="api_secret">API Secret:</label><br>
        <input type="text" id="api_secret" name="api_secret"><br>
        <label for="symbol">Symbol:</label><br>
        <input type="text" id="symbol" name="symbol"><br><br>
        <button type="button" onclick="queryGemini()">Query Gemini API</button>
    </form>
    <div id="result"></div>
</body>
</html>
